
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminMaster.cshtml";
    DatabaseEntities shop = new DatabaseEntities();
}
@using WebOnline.Models
@model List<WebOnline.Models.NhaCungCap>
<link href="~/Content/dataTables.bootstrap.css" rel="stylesheet" />
<h1 class="page-header">
    <a href="/QLNhaCungCap/ThemNhaCC" class="btn btn-outline btn-primary">Thêm</a>
</h1>
<div class="dataTable_wrapper">
    <table class="table table-striped table-bordered table-hover" id="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Nhà cung cấp </th>
                <th>Địa chỉ</th>
                <th>Phone</th>
                <th>Ghi chú</th>
                <th>Sửa</th>
                <th>Xóa</th>
            </tr>
        </thead>
        <tbody>

            @for (int i = 0; i < Model.Count; i++)
            {
                if (i % 2 == 0)
                {
                    <tr class="even gradeA">
                        <td>@Model[i].MaNCC</td>
                        <td>@Model[i].TenNCC</td>
                        <td>@Model[i].Diachi</td>
                        <td>@Model[i].Phone</td>
                        <td>@Model[i].GhiChu</td>
                        <td><a href="/QLNhaCungCap/SuaNhaCC/@Model[i].MaNCC" class="btn btn-outline btn-primary">Sửa</a></td>
                        <td><a href="/QLNhaCungCap/XoaNhaCC/@Model[i].MaNCC" class="btn btn-outline btn-primary">Xóa</a></td>
                    </tr>
                }
                else
                {
                    <tr class="odd gradeA">
                        <td>@Model[i].MaNCC</td>
                        <td>@Model[i].TenNCC</td>
                        <td>@Model[i].Diachi</td>
                        <td>@Model[i].Phone</td>
                        <td>@Model[i].GhiChu</td>
                        <td><a href="/QLNhaCungCap/SuaNhaCC/@Model[i].MaNCC" class="btn btn-outline btn-primary">Sửa</a></td>
                        <td><a href="/QLNhaCungCap/XoaNhaCC/@Model[i].MaNCC" class="btn btn-outline btn-primary">Xóa</a></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

