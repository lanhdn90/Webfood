
@{
    ViewBag.Title = "Thêm Nhà cung cấp";
    Layout = "~/Views/Shared/AdminMaster.cshtml";
}
@model WebOnline.Models.NhaCungCap
<h1 class="page-header">
    <a href="/QLNhaCungCap/Index" class="btn btn-outline btn-primary">Quay lại</a>
</h1>
<div class="row" style="margin-bottom: 50px">

    <div class="col-md-12">
        @using (Html.BeginForm("ThemNhaCC", "QLNhaCungCap", FormMethod.Post, new { enctype = "multipart/form-data", id = "frmThem" }))
        {
            <div class="form-group input-group" style="display: block;">
                <label>Nhà cung cấp</label>
                @Html.TextBoxFor(m => m.TenNCC, new { @class = "form-control", placeholder = "Nhà cung cấp", required = "required" })
            </div>
            <div class="form-group input-group" style="display: block;">
                <label>Địa chỉ</label>
                @Html.TextBoxFor(m => m.Diachi, new { @class = "form-control", placeholder = "Địa chỉ", required = "required" })
            </div>
            <div class="form-group input-group" style="display: block;">
                <label>Điện thoại</label>
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = "Điện thoại", required = "required" })
            </div>
            <div class="form-group input-group" style="display: block;">
                <label>Ghi chú</label>
                @Html.TextBoxFor(m => m.GhiChu, new { @class = "form-control", placeholder = "Ghi chú", required = "required" })
            </div>
            <div style="float: left">
                <input type="submit" class="btn btn-outline btn-primary" value="Thêm" />
                <input type="reset" class="btn btn-outline btn-primary" value="Làm lại" />
            </div>
        }
    </div>

</div>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/ckeditor/ckeditor.js"></script>
<script src="~/ckfinder/ckfinder.js"></script>
<Script>
    CKEDITOR.replace('chitiet');
</Script>

