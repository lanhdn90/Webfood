

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Đăng Kí</title>
    <link href="~/Content/Home/styleDangki.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
</head>
@model WebOnline.Models.TaiKhoan
@using (Html.BeginForm("dangky", "Login", FormMethod.Post))
{
    <body>
        <div class="box">
            <h2>Đăng Kí Tài Khoản</h2>
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <form>
            <div class="inputBox">
                <input type="text" name="TaiKhoan1" required="">
                <label>Tài Khoản</label>
            </div>
            <div class="inputBox">
                <input type="password" name="MatKhau" required="" id="password">
                <label>Mật Khẩu</label>
                <div id="toggle" onclick="showHide();">
                    <i class="fa fa-eye" aria-hidden="true"></i>
                </div>
            </div>
            <div class="inputBox">
                <input type="password" name="" required="" id="passwordAgain">
                <label>Nhập Lại Mật Khẩu</label>
                <div id="toggle2" onclick="showHide2();">
                    <i class="fa fa-eye" aria-hidden="true"></i>
                </div>
            </div>

            <input type="submit" name="" value="Đăng Kí">
            
                <a href="/Home/Index/"
                   style="      border: none;
                                outline: none;
                                color: #fff;
                                background: #03a9f4;
                                padding: 10px 20px;
                                cursor: pointer;
                                border-radius: 5px;
                                font-size: 20px;"
                   >Trang chủ</a>
          

        </form>
        </div>
        <script src="~/Scripts/jquery-3.3.1.min.js"></script>
        <script src="~/Scripts/HomeControl/Dangki.js"></script>

    </body>
}
</html>

